<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>

    <!-- form view for Product Brand -->
    <record model = "ir.ui.view" id = "product_brand_form_view">
                <field name = "name">product.brand</field>
                <field name = "model">product.brand</field>
                <field name = "arch" type = "xml">
                    <form string="Product Brand">
                        <sheet>
                             <group>
                                   <field name = "name"/>
                                   <field name = "description"/>
                                   <field name="product_ids" widget="many2many_tags"/>
                             </group>
                        </sheet>
                    </form>
                </field>
    </record>

    <!-- form view for Product Subgroup -->
    <record model = "ir.ui.view" id = "product_subgroup_form_view">
                <field name = "name">product.subgroup</field>
                <field name = "model">product.subgroup</field>
                <field name = "arch" type = "xml">
                    <form string="Product Subgroup">
                        <sheet>
                             <group>
                                   <field name = "name" required="1"/>
                                   <field name = "description"/>
                                   <field name="product_ids" widget="many2many_tags"/>
                             </group>
                        </sheet>
                    </form>
                </field>
    </record>

    <!-- form view for Product Subgroup -->
    <record model = "ir.ui.view" id = "product_mfg_form_view">
                <field name = "name">product.mfg</field>
                <field name = "model">product.mfg</field>
                <field name = "arch" type = "xml">
                    <form string="Product Mfg">
                        <sheet>
                             <group>
                                   <field name = "name"/>
                                   <field name = "description"/>
                                   <field name="product_ids" widget="many2many_tags"/>
                             </group>
                        </sheet>
                    </form>
                </field>
    </record>

    <!--Tree view for Product Brand -->
    <record  id="product_brand_tree_view"  model="ir.ui.view">
                <field  name="name">Product Brand Tree view</field>
                <field  name="model">product.brand</field>
                <field  name="arch"  type="xml">
                    <tree>  
                         <field name = "name"/>
                         <field name = "description"/>
                    </tree>
                </field>
    </record>

    <!--Tree view for Product Subgroup -->
    <record  id="product_subgroup_tree_view"  model="ir.ui.view">
                <field  name="name">Product Subgroup Tree view</field>
                <field  name="model">product.subgroup</field>
                <field  name="arch"  type="xml">
                    <tree>  
                         <field name = "name"/>
                         <field name = "description"/>
                    </tree>
                </field>
    </record>

    <!--Tree view for Product Mfg -->
    <record  id="product_mfg_tree_view"  model="ir.ui.view">
                <field  name="name">Product Mfg Tree view</field>
                <field  name="model">product.mfg</field>  
                <field  name="arch"  type="xml">
                    <tree>  
                         <field name = "name"/>
                         <field name = "description"/>
                    </tree>
                </field>
    </record>

    <!-- Generic view for Product Brand -->
    <record id="product_brand_menu_action" model="ir.actions.act_window">
                <field name="name">Product Brand</field>
                <field name="res_model">product.brand</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <field name="domain">[]</field>
                <field name="help" type="html">
                    <p class="oe_view_nocontent_create">Create a Product Brand
                    </p>
                </field>
    </record>

    <!-- Generic view for Product Subgroup -->
    <record id="product_subgroup_menu_action" model="ir.actions.act_window">
                <field name="name">Product Subgroup</field>
                <field name="res_model">product.subgroup</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <field name="domain">[]</field>
                <field name="help" type="html">
                    <p class="oe_view_nocontent_create">Create a Product Subgroup
                    </p>
                </field>
    </record>

    <!-- Generic view for Product Mfg -->
    <record id="product_mfg_menu_action" model="ir.actions.act_window">
                <field name="name">Product Mfg</field>
                <field name="res_model">product.mfg</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <field name="domain">[]</field>
                <field name="help" type="html">
                    <p class="oe_view_nocontent_create">Create a Product Mfg
                    </p>
                </field>
    </record>

    <!-- Top menu item -->
     <menuitem id="product_brand_menu"
                name="Product Brand"
                parent="sale.prod_config_main"
                action="stallion_extensions.product_brand_menu_action"
                sequence="9"/>

     <menuitem id="product_subgroup_menu"
                name="Product Subgroup"
                parent="sale.prod_config_main"
                action="stallion_extensions.product_subgroup_menu_action"
                sequence="10"/>

     <menuitem id="product_mfg_menu"
                name="Product Mfg"
                parent="sale.prod_config_main"
                action="stallion_extensions.product_mfg_menu_action"
                sequence="11"/>

</data>
</odoo>
