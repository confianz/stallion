<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!--form view of subgroup wizard -->
    <record id="subgroup_wizard_view_form" model="ir.ui.view">
        <field name="name">subgroup.wizard.form</field>
        <field name="model">subgroup.wizard</field>
        <field name="arch" type="xml">
            <form string="subgroup wizard">
                <sheet>

                       <field name="name" invisible="1"/>
                       <separator string="Choose Subgroups and Parts"/>
                    <group>


                       <field name="line_ids" nolabel="1">
                          <tree editable="bottom">
                                 <field name="subgroup_id" required="1"/>
                                 <field string="Parts" name="product_ids" widget="many2many_tags" options="{'no_create': True}" required="1"/>
                           </tree>
                       </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_product" string='Create Products' type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>


    <!-- Action for Subgroup wizard -->
    <record id="subgroup_wizard_action" model="ir.actions.act_window">
        <field name="name">Subgroup</field>
        <field name="res_model">subgroup.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="subgroup_wizard_view_form" />
        <field name="target">new</field>
    </record>


    <menuitem id="subgroup_wizard_menu_generate" name="Create Product Combination"
              action="stallion_extensions.subgroup_wizard_action"
              sequence="12" parent="sale.product_menu_catalog" />

</odoo>
